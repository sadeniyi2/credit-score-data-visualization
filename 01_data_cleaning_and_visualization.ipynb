# --- Step 1: Import Libraries ---
import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns

%matplotlib inline
plt.rcParams['figure.figsize'] = (9,6)

# --- Step 2: Upload Dataset ---
# NOTE: Replace this with your local path if uploading to GitHub
# For Colab: you can still use files.upload()
from google.colab import files
uploaded = files.upload()
csv_path = list(uploaded.keys())[0]
print("Dataset uploaded as:", csv_path)

# --- Step 3: Load Data ---
df = pd.read_csv(csv_path)
print("Initial Shape:", df.shape)
df.head()

# --- Step 4: Data Cleaning ---
# 1. Standardize column names
df.columns = [c.strip().lower().replace(' ', '_') for c in df.columns]

# 2. Trim string columns
for col in ['country', 'region']:
    if col in df.columns:
        df[col] = df[col].astype(str).str.strip()

# 3. Remove duplicates
before = df.shape[0]
df = df.drop_duplicates(ignore_index=True)
print("Duplicates removed:", before - df.shape[0])

# 4. Ensure numeric columns are numeric
numeric_cols = [
    'happiness_score','gdp_per_capita','social_support',
    'healthy_life_expectancy','freedom_to_make_life_choices',
    'generosity','perceptions_of_corruption'
]
for col in numeric_cols:
    if col in df.columns:
        df[col] = pd.to_numeric(df[col], errors='coerce')

# 5. Check for nulls
print("Missing values per column:")
print(df.isnull().sum())

# --- Step 5: Export Cleaned Data ---
cleaned_path = "cleaned_data.csv"
df.to_csv(cleaned_path, index=False)
print("Cleaned dataset saved as:", cleaned_path)

# Optional: Download if using Colab
files.download(cleaned_path)

# --- Step 6: Exploratory Visualization ---

# Example 1: Histogram of a numeric column
if 'happiness_score' in df.columns:
    df['happiness_score'].plot(kind='hist', bins=20, title='Happiness Score Distribution')
    plt.xlabel('Happiness Score')
    plt.ylabel('Frequency')
    plt.gca().spines[['top','right']].set_visible(False)
    plt.show()

# Example 2: Correlation Heatmap
numeric_data = df.select_dtypes(include=np.number)
if not numeric_data.empty:
    plt.figure(figsize=(10,8))
    sns.heatmap(numeric_data.corr(), annot=True, cmap='coolwarm')
    plt.title("Correlation Heatmap")
    plt.show()

